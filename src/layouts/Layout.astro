---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Personalized chiropractic care for San Diego adults who want to stay active and independent. Dr. Nathan Beyerl offers gentle adjustments, movement therapy, and neuro rehabilitation." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Source+Sans+3:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title} | The Bridge Chiropractic</title>
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to main content</a>

    <header class="header">
      <div class="container header__container">
        <a href="/" class="header__logo">
          <span class="header__logo-text">The Bridge</span>
          <span class="header__logo-tagline">Chiropractic</span>
        </a>

        <nav class="header__nav" id="main-nav">
          <ul class="header__nav-list">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/services">Services</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </nav>

        <div class="header__actions">
          <a href="tel:8582777500" class="header__phone">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
            <span>(858) 277-7500</span>
          </a>
          <a href="/contact" class="btn btn--primary header__cta">Book Online</a>
        </div>

        <button class="header__menu-toggle" id="menu-toggle" aria-label="Toggle menu" aria-expanded="false">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </header>

    <main id="main">
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer__grid">
          <div class="footer__brand">
            <div class="footer__logo">
              <span class="footer__logo-text">The Bridge</span>
              <span class="footer__logo-tagline">Chiropractic</span>
            </div>
            <p class="footer__tagline">"Move Better. Live Fuller."</p>
          </div>

          <div class="footer__links">
            <h4>Quick Links</h4>
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/about">About</a></li>
              <li><a href="/services">Services</a></li>
              <li><a href="/contact">Contact</a></li>
            </ul>
          </div>

          <div class="footer__links">
            <h4>Services</h4>
            <ul>
              <li><a href="/services#chiropractic">Chiropractic Care</a></li>
              <li><a href="/services#soft-tissue">Soft Tissue Therapy</a></li>
              <li><a href="/services#movement">Movement Training</a></li>
              <li><a href="/services#neuro">Neuro Rehabilitation</a></li>
            </ul>
          </div>

          <div class="footer__contact">
            <h4>Contact</h4>
            <address>
              <p>4340 Genesee Ave, Suite 201<br>San Diego, CA 92117</p>
              <p><a href="tel:8582777500">(858) 277-7500</a></p>
              <p><a href="mailto:bridgechiropracticsd@gmail.com">bridgechiropracticsd@gmail.com</a></p>
            </address>
            <div class="footer__social">
              <a href="https://instagram.com/bridgechiropracticsd" aria-label="Instagram" target="_blank" rel="noopener">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
              </a>
              <a href="https://facebook.com/bridgechiropracticsd" aria-label="Facebook" target="_blank" rel="noopener">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
              </a>
            </div>
          </div>
        </div>

        <div class="footer__bottom">
          <p>&copy; {new Date().getFullYear()} The Bridge Chiropractic. All rights reserved.</p>
          <div class="footer__legal">
            <a href="/privacy">Privacy Policy</a>
            <a href="/terms">Terms of Service</a>
          </div>
        </div>
      </div>
    </footer>

    <style>
      /* Header Styles */
      .header {
        position: sticky;
        top: 0;
        background: var(--color-white);
        box-shadow: var(--shadow-sm);
        z-index: 100;
      }

      .header__container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-top: var(--space-md);
        padding-bottom: var(--space-md);
        gap: var(--space-lg);
      }

      .header__logo {
        display: flex;
        flex-direction: column;
        text-decoration: none;
        color: var(--color-charcoal);
      }

      .header__logo-text {
        font-family: var(--font-heading);
        font-size: 1.5rem;
        font-weight: 700;
        line-height: 1;
        color: var(--color-primary);
      }

      .header__logo-tagline {
        font-size: 0.875rem;
        color: var(--color-gray-dark);
        letter-spacing: 0.05em;
      }

      .header__nav-list {
        display: flex;
        list-style: none;
        gap: var(--space-xl);
      }

      .header__nav-list a {
        color: var(--color-charcoal);
        font-weight: 600;
        text-decoration: none;
        transition: color var(--transition-fast);
      }

      .header__nav-list a:hover {
        color: var(--color-primary);
      }

      .header__actions {
        display: flex;
        align-items: center;
        gap: var(--space-lg);
      }

      .header__phone {
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        color: var(--color-charcoal);
        font-weight: 600;
        text-decoration: none;
      }

      .header__phone:hover {
        color: var(--color-primary);
      }

      .header__cta {
        padding: var(--space-sm) var(--space-lg);
        min-width: auto;
        font-size: 0.875rem;
      }

      .header__menu-toggle {
        display: none;
        flex-direction: column;
        gap: 5px;
        background: none;
        border: none;
        cursor: pointer;
        padding: var(--space-sm);
      }

      .header__menu-toggle span {
        display: block;
        width: 24px;
        height: 2px;
        background: var(--color-charcoal);
        transition: all var(--transition-fast);
      }

      @media (max-width: 1024px) {
        .header__nav {
          display: none;
        }

        .header__phone span {
          display: none;
        }

        .header__menu-toggle {
          display: flex;
        }
      }

      @media (max-width: 640px) {
        .header__cta {
          display: none;
        }
      }

      /* Footer Styles */
      .footer {
        background: var(--color-charcoal);
        color: var(--color-white);
        padding: var(--space-4xl) 0 var(--space-xl);
        border-top: 4px solid var(--color-primary);
      }

      .footer__grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr 1fr 1.5fr;
        gap: var(--space-3xl);
        margin-bottom: var(--space-3xl);
      }

      .footer__logo {
        display: flex;
        flex-direction: column;
        margin-bottom: var(--space-md);
      }

      .footer__logo-text {
        font-family: var(--font-heading);
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--color-primary);
      }

      .footer__logo-tagline {
        font-size: 1rem;
        color: var(--color-gray-medium);
      }

      .footer__tagline {
        font-style: italic;
        color: var(--color-gray-medium);
      }

      .footer__links h4,
      .footer__contact h4 {
        color: var(--color-white);
        margin-bottom: var(--space-md);
        font-size: 1.125rem;
      }

      .footer__links ul {
        list-style: none;
      }

      .footer__links li {
        margin-bottom: var(--space-sm);
      }

      .footer__links a,
      .footer__contact a {
        color: var(--color-gray-medium);
        text-decoration: none;
        transition: color var(--transition-fast);
      }

      .footer__links a:hover,
      .footer__contact a:hover {
        color: var(--color-primary);
      }

      .footer__contact address {
        font-style: normal;
        color: var(--color-gray-medium);
      }

      .footer__contact p {
        margin-bottom: var(--space-sm);
      }

      .footer__social {
        display: flex;
        gap: var(--space-md);
        margin-top: var(--space-lg);
      }

      .footer__social a {
        color: var(--color-gray-medium);
        transition: color var(--transition-fast);
      }

      .footer__social a:hover {
        color: var(--color-primary);
      }

      .footer__bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: var(--space-xl);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--color-gray-medium);
        font-size: 0.875rem;
      }

      .footer__legal {
        display: flex;
        gap: var(--space-lg);
      }

      .footer__legal a {
        color: var(--color-gray-medium);
      }

      @media (max-width: 1024px) {
        .footer__grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      @media (max-width: 640px) {
        .footer__grid {
          grid-template-columns: 1fr;
          gap: var(--space-xl);
        }

        .footer__bottom {
          flex-direction: column;
          gap: var(--space-md);
          text-align: center;
        }
      }
    </style>

    <script>
      // Mobile menu toggle
      const menuToggle = document.getElementById('menu-toggle');
      const nav = document.getElementById('main-nav');

      menuToggle?.addEventListener('click', () => {
        const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
        menuToggle.setAttribute('aria-expanded', (!isExpanded).toString());
        nav?.classList.toggle('is-open');
      });
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
