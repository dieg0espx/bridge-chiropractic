---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Personalized chiropractic care for San Diego adults who want to stay active and independent. Dr. Nathan Beyerl offers gentle adjustments, movement therapy, and neuro rehabilitation." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
    <link rel="shortcut icon" href="/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <meta name="theme-color" content="#2C2C2C" />

    <title>{title} | The Bridge Chiropractic</title>
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to main content</a>

    <header class="header" id="header">
      <div class="header__container">
        <button class="header__menu-toggle" id="menu-toggle" aria-label="Toggle menu" aria-expanded="false">
          <span></span>
          <span></span>
          <span></span>
        </button>

        <a href="/" class="header__logo">
          <img src="/images/logo.svg" alt="The Bridge Chiropractic" class="header__logo-img" />
        </a>

        <div class="header__spacer"></div>
      </div>
    </header>

    <!-- Sidebar Nav (Outside header for proper z-index stacking) -->
    <nav class="sidebar-nav" id="sidebar-nav" aria-hidden="true">
      <div class="sidebar-nav__header">
        <button class="sidebar-nav__close" id="sidebar-close" aria-label="Close menu">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </div>

      <div class="sidebar-nav__content">
        <div class="sidebar-nav__main-links">
          <ul class="sidebar-nav__list">
            <li><a href="/about">About Dr. Beyerl</a></li>
            <li><a href="/services">Services</a></li>
            <li><a href="/conditions">What We Treat</a></li>
            <li><a href="/testimonials">Patient Stories</a></li>
            <li><a href="/faq">FAQ</a></li>
            <li><a href="/gallery">Gallery</a></li>
            <li><a href="/blog">Blog</a></li>
          </ul>
        </div>

        <div class="sidebar-nav__cta">
          <a href="/contact" class="sidebar-nav__btn">
            Book Appointment
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>

        <div class="sidebar-nav__contact">
          <div class="sidebar-nav__contact-item">
            <div class="sidebar-nav__contact-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
            </div>
            <div>
              <div class="sidebar-nav__contact-label">Call Us</div>
              <a href="tel:8582777500" class="sidebar-nav__phone">(858) 277-7500</a>
            </div>
          </div>

          <div class="sidebar-nav__contact-item">
            <div class="sidebar-nav__contact-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
            </div>
            <div>
              <div class="sidebar-nav__contact-label">Visit Us</div>
              <address class="sidebar-nav__address">
                4340 Genesee Ave, Suite 201<br>
                San Diego, CA 92117
              </address>
            </div>
          </div>

          <div class="sidebar-nav__contact-item">
            <div class="sidebar-nav__contact-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
            </div>
            <div>
              <div class="sidebar-nav__contact-label">Hours</div>
              <div class="sidebar-nav__hours">Mon - Fri: 9am - 5pm</div>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <!-- Overlay (Outside header for proper z-index stacking) -->
    <div class="sidebar-overlay" id="sidebar-overlay"></div>

    <main id="main">
      <slot />
    </main>

    <footer class="footer">
      <!-- Main Footer -->
      <div class="footer__main">
        <div class="container">
          <div class="footer__grid">
            <!-- Brand Column -->
            <div class="footer__brand">
              <a href="/" class="footer__logo">
                <img src="/images/logo.svg" alt="The Bridge Chiropractic" class="footer__logo-img" />
              </a>
              <p class="footer__tagline">Move Better. Live Fuller.</p>
              <p class="footer__description">Personalized chiropractic care for San Diego adults who want to stay active, independent, and pain-free.</p>
              <div class="footer__social">
                <a href="https://instagram.com/bridgechiropracticsd" aria-label="Instagram" target="_blank" rel="noopener">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
                </a>
                <a href="https://facebook.com/bridgechiropracticsd" aria-label="Facebook" target="_blank" rel="noopener">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
                </a>
              </div>
            </div>

            <!-- Quick Links -->
            <div class="footer__col">
              <h4>Quick Links</h4>
              <ul>
                <li><a href="/about">About Dr. Beyerl</a></li>
                <li><a href="/services">Our Services</a></li>
                <li><a href="/conditions">Conditions We Treat</a></li>
                <li><a href="/testimonials">Patient Stories</a></li>
                <li><a href="/faq">FAQ</a></li>
              </ul>
            </div>

            <!-- Services -->
            <div class="footer__col">
              <h4>Services</h4>
              <ul>
                <li><a href="/services#chiropractic">Chiropractic Care</a></li>
                <li><a href="/services#soft-tissue">Soft Tissue Therapy</a></li>
                <li><a href="/services#movement">Movement Training</a></li>
                <li><a href="/services#neuro">Neuro Rehabilitation</a></li>
              </ul>
            </div>

            <!-- Contact Info -->
            <div class="footer__col footer__contact">
              <h4>Visit Us</h4>
              <div class="footer__contact-item">
                <div class="footer__contact-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                </div>
                <address>
                  4340 Genesee Ave, Suite 201<br>
                  San Diego, CA 92117
                </address>
              </div>
              <div class="footer__contact-item">
                <div class="footer__contact-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
                </div>
                <span>Mon - Fri: 9am - 5pm</span>
              </div>
              <a href="https://maps.google.com/?q=4340+Genesee+Ave+Suite+201+San+Diego+CA+92117" target="_blank" rel="noopener" class="footer__directions">
                Get Directions
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Footer Bottom -->
      <div class="footer__bottom">
        <div class="container">
          <div class="footer__bottom-content">
            <p>&copy; {new Date().getFullYear()} The Bridge Chiropractic. All rights reserved.</p>
            <div class="footer__legal">
              <a href="/privacy">Privacy Policy</a>
              <span class="footer__divider">|</span>
              <a href="/terms">Terms of Service</a>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <style>
      /* Skip Link */
      .skip-link {
        position: absolute;
        top: -40px;
        left: 0;
        background: var(--color-charcoal);
        color: var(--color-white);
        padding: var(--space-sm) var(--space-md);
        z-index: 1000;
      }

      .skip-link:focus {
        top: 0;
      }

      /* Minimalistic Glassmorphic Header */
      .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        width: 100%;
        max-width: 100vw;
        background: rgba(255, 255, 255, 0.6);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.3);
        transition: all var(--transition-normal);
        overflow-x: hidden;
      }

      .header.scrolled {
        background: rgba(255, 255, 255, 0.75);
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.03);
      }

      .header__container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: var(--space-sm) var(--space-xl);
        max-width: 100%;
      }

      .header__logo {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        align-items: center;
        text-decoration: none;
      }

      .header__logo-img {
        height: 60px;
        width: auto;
        display: block;
      }

      .header__spacer {
        width: 40px;
        order: -1;
      }

      /* Menu Toggle Button */
      .header__menu-toggle {
        display: flex;
        flex-direction: column;
        gap: 5px;
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 8px;
        z-index: 10000;
        transition: all var(--transition-fast);
        position: relative;
      }

      .header__menu-toggle span {
        display: block;
        width: 24px;
        height: 2px;
        background: var(--color-charcoal);
        transition: all var(--transition-normal);
      }

      .header__menu-toggle.active span:nth-child(1) {
        transform: rotate(45deg) translate(6px, 6px);
      }

      .header__menu-toggle.active span:nth-child(2) {
        opacity: 0;
      }

      .header__menu-toggle.active span:nth-child(3) {
        transform: rotate(-45deg) translate(6px, -6px);
      }

      /* Sidebar Navigation - Lifetime.life Style */
      .sidebar-nav {
        position: fixed;
        top: 0;
        right: 0;
        width: 100%;
        max-width: 480px;
        height: 100vh;
        background: #F5F1ED;
        padding: 0;
        box-shadow: -2px 0 30px rgba(0, 0, 0, 0.1);
        transform: translateX(100%);
        transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 999999;
        overflow-y: auto;
        overflow-x: hidden;
        display: flex;
        flex-direction: column;
      }

      .sidebar-nav.active {
        transform: translateX(0);
      }

      .sidebar-nav__header {
        display: flex;
        justify-content: flex-start;
        padding: var(--space-2xl) var(--space-3xl);
        flex-shrink: 0;
        background: #F5F1ED;
        position: sticky;
        top: 0;
        z-index: 10;
      }

      .sidebar-nav__close {
        background: transparent;
        border: none;
        cursor: pointer;
        padding: var(--space-sm);
        color: var(--color-charcoal);
        transition: all var(--transition-fast);
        border-radius: var(--radius-sm);
      }

      .sidebar-nav__close:hover {
        transform: rotate(90deg);
        color: var(--color-charcoal);
        background: rgba(0, 0, 0, 0.05);
      }

      .sidebar-nav__content {
        display: flex;
        flex-direction: column;
        gap: var(--space-2xl);
        padding: 0 var(--space-3xl) var(--space-4xl);
        flex: 1;
      }

      .sidebar-nav__main-links {
        padding-bottom: var(--space-2xl);
        border-bottom: 1px solid rgba(0, 0, 0, 0.08);
      }

      .sidebar-nav__list {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .sidebar-nav__list li {
        margin-bottom: var(--space-md);
      }

      .sidebar-nav__list li:last-child {
        margin-bottom: 0;
      }

      .sidebar-nav__list a {
        display: block;
        color: var(--color-charcoal);
        font-weight: 400;
        font-size: 1.375rem;
        text-decoration: none;
        transition: all var(--transition-fast);
        font-family: var(--font-heading);
        line-height: 1.4;
        padding: var(--space-xs) 0;
      }

      .sidebar-nav__list a:hover,
      .sidebar-nav__list a.active {
        color: var(--color-accent);
        transform: translateX(4px);
      }

      .sidebar-nav__cta {
        padding-bottom: var(--space-2xl);
        border-bottom: 1px solid rgba(0, 0, 0, 0.08);
      }

      .sidebar-nav__btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: var(--space-sm);
        background: var(--color-charcoal);
        color: var(--color-white);
        padding: 16px 32px;
        border-radius: var(--radius-full);
        font-size: 1.0625rem;
        font-weight: 600;
        text-decoration: none;
        transition: all var(--transition-normal);
        font-family: var(--font-body);
        width: 100%;
      }

      .sidebar-nav__btn:hover {
        background: var(--color-accent);
        transform: translateY(-2px);
        box-shadow: 0 6px 24px rgba(0, 0, 0, 0.12);
      }

      .sidebar-nav__btn svg {
        transition: transform var(--transition-fast);
        flex-shrink: 0;
      }

      .sidebar-nav__btn:hover svg {
        transform: translateX(4px);
      }

      .sidebar-nav__contact {
        display: flex;
        flex-direction: column;
        gap: var(--space-xl);
      }

      .sidebar-nav__contact-item {
        display: flex;
        gap: var(--space-md);
        align-items: flex-start;
        padding: var(--space-md);
        background: rgba(255, 255, 255, 0.5);
        border-radius: var(--radius-md);
        transition: all var(--transition-fast);
      }

      .sidebar-nav__contact-item:hover {
        background: rgba(255, 255, 255, 0.8);
        transform: translateX(2px);
      }

      .sidebar-nav__contact-icon {
        flex-shrink: 0;
        width: 42px;
        height: 42px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.06);
        border-radius: var(--radius-md);
        color: var(--color-charcoal);
        transition: all var(--transition-fast);
      }

      .sidebar-nav__contact-item:hover .sidebar-nav__contact-icon {
        background: rgba(0, 0, 0, 0.08);
      }

      .sidebar-nav__contact-label {
        font-size: 0.6875rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: rgba(0, 0, 0, 0.45);
        margin-bottom: 4px;
        font-family: var(--font-body);
      }

      .sidebar-nav__phone {
        display: block;
        color: var(--color-charcoal);
        font-size: 1.0625rem;
        font-weight: 600;
        text-decoration: none;
        transition: all var(--transition-fast);
        font-family: var(--font-body);
      }

      .sidebar-nav__phone:hover {
        color: var(--color-accent);
      }

      .sidebar-nav__address {
        font-style: normal;
        color: var(--color-charcoal);
        font-size: 0.9375rem;
        line-height: 1.6;
        font-family: var(--font-body);
      }

      .sidebar-nav__hours {
        color: var(--color-charcoal);
        font-size: 0.9375rem;
        line-height: 1.5;
        font-family: var(--font-body);
      }

      /* Sidebar Overlay */
      .sidebar-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(2px);
        -webkit-backdrop-filter: blur(2px);
        opacity: 0;
        visibility: hidden;
        transition: all var(--transition-normal);
        z-index: 999998;
      }

      .sidebar-overlay.active {
        opacity: 1;
        visibility: visible;
      }

      @media (max-width: 768px) {
        .header__container {
          padding: var(--space-xs) var(--space-lg);
        }

        .header__logo-img {
          height: 50px;
        }

        .sidebar-nav {
          max-width: 100%;
        }

        .sidebar-nav__header {
          padding: var(--space-xl) var(--space-2xl);
        }

        .sidebar-nav__content {
          gap: var(--space-xl);
          padding: 0 var(--space-2xl) var(--space-3xl);
        }

        .sidebar-nav__list li {
          margin-bottom: var(--space-sm);
        }

        .sidebar-nav__list a {
          font-size: 1.25rem;
        }

        .sidebar-nav__btn {
          font-size: 1rem;
          padding: 14px 28px;
        }

        .sidebar-nav__contact {
          gap: var(--space-lg);
        }

        .sidebar-nav__phone {
          font-size: 1rem;
        }
      }

      @media (max-width: 480px) {
        .header__container {
          padding: var(--space-xs);
        }

        .header__logo-img {
          height: 45px;
        }

        .sidebar-nav__header {
          padding: var(--space-lg) var(--space-xl);
        }

        .sidebar-nav__content {
          gap: var(--space-lg);
          padding: 0 var(--space-xl) var(--space-2xl);
        }

        .sidebar-nav__list a {
          font-size: 1.125rem;
        }

        .sidebar-nav__list li {
          margin-bottom: 6px;
        }

        .sidebar-nav__btn {
          font-size: 0.9375rem;
          padding: 12px 24px;
        }

        .sidebar-nav__contact {
          gap: var(--space-md);
        }

        .sidebar-nav__contact-item {
          padding: var(--space-sm) var(--space-md);
        }

        .sidebar-nav__phone {
          font-size: 0.9375rem;
        }

        .sidebar-nav__address,
        .sidebar-nav__hours {
          font-size: 0.875rem;
        }

        .sidebar-nav__contact-icon {
          width: 38px;
          height: 38px;
        }
      }

      /* Footer */
      .footer {
        background: var(--color-charcoal);
        color: var(--color-white);
      }

      /* Footer CTA Banner */
      .footer__cta {
        background: var(--color-primary);
        padding: var(--space-xl) 0;
      }

      .footer__cta-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: var(--space-xl);
      }

      .footer__cta-text h3 {
        color: var(--color-white);
        font-size: 1.5rem;
        margin-bottom: var(--space-xs);
      }

      .footer__cta-text p {
        color: rgba(255, 255, 255, 0.9);
        margin: 0;
      }

      .footer__cta-actions {
        display: flex;
        align-items: center;
        gap: var(--space-lg);
      }

      .footer__cta-phone {
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        color: var(--color-white);
        font-weight: 600;
        text-decoration: none;
        transition: opacity var(--transition-fast);
      }

      .footer__cta-phone:hover {
        opacity: 0.8;
      }

      .btn--white {
        background: var(--color-white);
        color: var(--color-charcoal);
        padding: 12px 28px;
        border-radius: var(--radius-full);
        font-weight: 600;
        text-decoration: none;
        transition: all var(--transition-normal);
      }

      .btn--white:hover {
        background: var(--color-off-white);
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
      }

      /* Footer Main */
      .footer__main {
        padding: var(--space-4xl) 0 var(--space-3xl);
      }

      .footer__grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
        gap: var(--space-3xl);
      }

      .footer__brand {
        padding-right: var(--space-xl);
      }

      .footer__logo {
        display: inline-flex;
        align-items: center;
        text-decoration: none;
        margin-bottom: var(--space-md);
      }

      .footer__logo-img {
        height: 50px;
        width: auto;
        filter: brightness(0) invert(1);
      }

      .footer__tagline {
        color: var(--color-primary);
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: var(--space-md);
      }

      .footer__description {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.95rem;
        line-height: 1.7;
        margin-bottom: var(--space-lg);
      }

      .footer__social {
        display: flex;
        gap: var(--space-sm);
      }

      .footer__social a {
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.08);
