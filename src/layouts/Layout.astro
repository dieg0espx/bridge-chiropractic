    <style>
      /* Header - Premium Glass Design */
      .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
        padding: var(--space-xs) 0;
      }

      .header__blur {
        position: absolute;
        inset: 0;
        background: transparent;
        backdrop-filter: blur(0px);
        -webkit-backdrop-filter: blur(0px);
        transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
        z-index: -1;
      }

      .header__accent-line {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--color-primary) 0%, var(--color-accent) 50%, var(--color-primary) 100%);
        background-size: 200% 100%;
        animation: shimmer 3s ease-in-out infinite;
        opacity: 0;
        transition: opacity 0.5s ease;
      }

      @keyframes shimmer {
        0%, 100% { background-position: 200% 0; }
        50% { background-position: 0% 0; }
      }

      .header.scrolled .header__accent-line {
        opacity: 1;
      }

      .header.scrolled {
        padding: 0;
      }

      .header.scrolled .header__blur {
        background: rgba(255, 255, 255, 0.92);
        backdrop-filter: blur(20px) saturate(180%);
        -webkit-backdrop-filter: blur(20px) saturate(180%);
        box-shadow:
          0 4px 30px rgba(0, 0, 0, 0.06),
          0 1px 3px rgba(0, 0, 0, 0.04),
          inset 0 -1px 0 rgba(255, 255, 255, 0.8);
      }

      .header__container {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
        padding-top: var(--space-md);
        padding-bottom: var(--space-md);
        gap: var(--space-xl);
      }

      .header__logo {
        display: flex;
        align-items: center;
        text-decoration: none;
        position: relative;
        z-index: 1;
      }

      .header__logo-img {
        height: 64px;
        width: auto;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        filter: brightness(0) invert(1);
      }

      .header__logo:hover .header__logo-img {
        transform: scale(1.02);
      }

      .header.scrolled .header__logo-img {
        filter: none;
        height: 54px;
      }

      /* Navigation */
      .header__nav {
        position: relative;
      }

      .header__nav-list {
        display: flex;
        list-style: none;
        gap: var(--space-2xs);
        position: relative;
      }

      .nav-link {
        color: rgba(255,255,255,0.95);
        font-weight: 500;
        font-size: 0.9rem;
        letter-spacing: 0.01em;
        text-decoration: none;
        padding: var(--space-sm) var(--space-lg);
        border-radius: var(--radius-lg);
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        position: relative;
        display: block;
        overflow: hidden;
      }

      .nav-link span {
        position: relative;
        z-index: 1;
        display: block;
        transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
      }

      .nav-link::before {
        content: attr(data-text);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, 100%);
        font-weight: 600;
        color: var(--color-primary);
        opacity: 0;
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
      }

      .nav-link::after {
        content: '';
        position: absolute;
        inset: 0;
        background: rgba(255, 255, 255, 0.08);
        border-radius: var(--radius-lg);
        opacity: 0;
        transform: scale(0.95);
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
      }

      .nav-link:hover span {
        transform: translateY(-100%);
        opacity: 0;
      }

      .nav-link:hover::before {
        transform: translate(-50%, -50%);
        opacity: 1;
      }

      .nav-link:hover::after {
        opacity: 1;
        transform: scale(1);
      }

      .nav-link.active::after {
        opacity: 1;
        transform: scale(1);
        background: rgba(255, 255, 255, 0.12);
      }

      .header.scrolled .nav-link {
        color: var(--color-charcoal);
      }

      .header.scrolled .nav-link::before {
        color: var(--color-primary);
      }

      .header.scrolled .nav-link::after {
        background: var(--color-primary-light);
      }

      .header.scrolled .nav-link.active::after {
        background: var(--color-primary-light);
      }

      /* Nav Indicator */
      .nav-indicator {
        position: absolute;
        bottom: -2px;
        height: 2px;
        background: var(--color-primary);
        border-radius: 2px;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        opacity: 0;
      }

      .header.scrolled .nav-indicator {
        opacity: 1;
      }

      /* Actions */
      .header__actions {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        gap: var(--space-lg);
      }

      .header__phone {
        display: flex;
        align-items: center;
        gap: var(--space-sm);
        color: rgba(255,255,255,0.95);
        font-weight: 500;
        font-size: 0.9rem;
        text-decoration: none;
        padding: var(--space-xs) var(--space-sm);
        border-radius: var(--radius-lg);
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
      }

      .header__phone-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: var(--radius-lg);
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
      }

      .header__phone:hover .header__phone-icon {
        background: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 0.25);
        transform: scale(1.05) rotate(-5deg);
      }

      .header__phone-text {
        transition: all 0.3s ease;
      }

      .header__phone:hover .header__phone-text {
        color: var(--color-white);
      }

      .header.scrolled .header__phone {
        color: var(--color-charcoal);
      }

      .header.scrolled .header__phone-icon {
        background: var(--color-primary-light);
        border-color: transparent;
        color: var(--color-primary);
      }

      .header.scrolled .header__phone:hover {
        color: var(--color-primary);
      }

      .header.scrolled .header__phone:hover .header__phone-icon {
        background: var(--color-primary);
        color: var(--color-white);
        transform: scale(1.05) rotate(-5deg);
      }

      /* CTA Button */
      .header__cta-wrapper {
        position: relative;
      }

      .header__cta {
        padding: var(--space-xs) var(--space-md);
        min-width: auto;
        font-size: 0.8rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: var(--space-xs);
        border-radius: var(--radius-md);
        position: relative;
        overflow: hidden;
        box-shadow: 0 2px 10px rgba(113, 196, 233, 0.25);
      }

      .header__cta::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, transparent 50%);
        opacity: 0;
        transition: opacity 0.3s ease;
      }

      .header__cta:hover::before {
        opacity: 1;
      }

      .header__cta-text {
        position: relative;
        z-index: 1;
      }

      .header__cta-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        z-index: 1;
        transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
      }

      .header__cta:hover .header__cta-icon {
        transform: scale(1.1);
      }

      .header.scrolled .header__cta {
        box-shadow: 0 2px 12px rgba(113, 196, 233, 0.3);
      }

      /* Menu Toggle */
      .header__menu-toggle {
        display: none;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        cursor: pointer;
        padding: var(--space-sm);
        z-index: 1001;
        width: 48px;
        height: 48px;
        align-items: center;
        justify-content: center;
        border-radius: var(--radius-lg);
        transition: all 0.3s ease;
        position: relative;
      }

      .header.scrolled .header__menu-toggle {
        background: var(--color-primary-light);
        border-color: rgba(113, 196, 233, 0.3);
      }

      .header__menu-toggle::before {
        content: '';
        position: absolute;
        inset: 0;
        background: rgba(255, 255, 255, 0.15);
        border-radius: var(--radius-lg);
        opacity: 0;
        transition: all 0.3s ease;
      }

      .header__menu-toggle:hover::before {
        opacity: 1;
      }

      .header.scrolled .header__menu-toggle::before {
        background: var(--color-primary-light);
      }

      .header__menu-toggle-inner {
        display: flex;
        flex-direction: column;
        gap: 5px;
        width: 22px;
        position: relative;
      }

      .header__menu-toggle span {
        display: block;
        width: 100%;
        height: 2px;
        background: var(--color-white);
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        border-radius: 2px;
        transform-origin: center;
      }

      .header__menu-toggle span:nth-child(1) {
        width: 100%;
      }

      .header__menu-toggle span:nth-child(2) {
        width: 75%;
      }

      .header__menu-toggle span:nth-child(3) {
        width: 50%;
      }

      .header__menu-toggle:hover span {
        width: 100%;
      }

      .header.scrolled .header__menu-toggle span {
        background: var(--color-charcoal);
      }

      .header__menu-toggle.active span {
        background: var(--color-white);
      }

      .header__menu-toggle.active span:nth-child(1) {
        width: 100%;
        transform: rotate(45deg) translate(5px, 5px);
      }

      .header__menu-toggle.active span:nth-child(2) {
        opacity: 0;
        transform: scaleX(0);
      }

      .header__menu-toggle.active span:nth-child(3) {
        width: 100%;
        transform: rotate(-45deg) translate(5px, -5px);
      }

      /* Mobile Nav - Premium Full Screen */
      .mobile-nav {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 999;
        opacity: 0;
        visibility: hidden;
        transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
      }

      .mobile-nav__backdrop {
        position: absolute;
        inset: 0;
