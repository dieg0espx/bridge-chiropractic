<style>
  /* Service Navigation Grid */
  .service-nav-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-xl);
    margin-top: 48px;
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .service-nav-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1025px) {
    .service-nav-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* Process Timeline */
  .process-timeline {
    display: grid;
    grid-template-columns: 1fr auto 1fr auto 1fr auto 1fr;
    gap: var(--space-xl);
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .timeline-item {
    text-align: center;
    padding: var(--space-xl);
    background: var(--color-white);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    border: 1px solid rgba(0, 0, 0, 0.04);
  }

  .timeline-item:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }

  .timeline-number {
    width: 72px;
    height: 72px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: 700;
    font-family: var(--font-heading);
    margin: 0 auto 24px;
    box-shadow: 0 8px 24px rgba(71, 128, 184, 0.3);
  }

  .timeline-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-charcoal);
    margin-bottom: 12px;
  }

  .timeline-content p {
    color: var(--color-gray-dark);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .timeline-connector {
    width: 2px;
    height: 60px;
    background: linear-gradient(180deg, var(--color-primary), var(--color-primary-light));
    position: relative;
  }

  .timeline-connector::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 12px;
    height: 12px;
    background: var(--color-primary);
    border-radius: 50%;
  }

  /* Service Detail Sections */
  .service-detail {
    display: grid;
    grid-template-columns: 1.1fr 1fr;
    gap: clamp(60px, 8vw, 100px);
    align-items: center;
  }

  .service-detail--reverse {
    grid-template-columns: 1fr 1.1fr;
  }

  .service-detail__content {
    position: relative;
    z-index: 2;
  }

  .service-detail__image {
    position: relative;
    height: 100%;
    min-height: 600px;
  }

  .image-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: var(--radius-2xl);
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    transition: transform 0.4s ease;
  }

  .image-wrapper:hover {
    transform: scale(1.02);
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(71, 128, 184, 0.1), rgba(53, 96, 138, 0.15));
    pointer-events: none;
  }

  /* Feature List */
  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0;
