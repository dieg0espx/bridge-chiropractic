<style>
  /* Hero Stats */
  .stats-hero {
    display: flex;
    gap: 48px;
    justify-content: center;
    margin-top: 48px;
    flex-wrap: wrap;
  }

  .stat-item {
    text-align: center;
  }

  .counter,
  .stat-value {
    font-size: 3rem;
    font-weight: 600;
    color: white;
    font-family: var(--font-heading);
    line-height: 1;
  }

  .stat-item p {
    color: rgba(255, 255, 255, 0.9);
    margin-top: 8px;
    font-size: 1rem;
  }

  /* Google Rating Section */
  .google-rating-section {
    margin-top: -80px;
    position: relative;
    z-index: 10;
  }

  .google-rating-card {
    padding: 48px;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 32px;
    flex-wrap: wrap;
  }

  .google-info {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .google-logo {
    width: 64px;
    height: 64px;
    flex-shrink: 0;
  }

  .stars {
    display: flex;
    gap: 4px;
    margin-bottom: 8px;
  }

  .rating-text {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-charcoal);
    margin: 0 0 4px 0;
  }

  .rating-subtext {
    color: var(--color-gray-dark);
    font-size: 0.9375rem;
    margin: 0;
  }

  /* Testimonials Infinite Scroll */
  .testimonials-scroll-container {
    overflow: hidden;
    margin-top: 64px;
    padding: 20px 0;
  }

  .testimonials-scroll-track {
    display: flex;
    gap: var(--space-xl);
    animation: scroll 90s linear infinite;
    will-change: transform;
  }

  .testimonials-scroll-track:hover {
    animation-play-state: paused;
  }

  .testimonial-card {
    flex: 0 0 400px;
    padding: 40px;
    border-radius: 16px;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-400px * 12 - var(--space-xl) * 12));
