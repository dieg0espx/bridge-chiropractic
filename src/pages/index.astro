<script>
  // ========================================
  // SCROLL REVEAL ANIMATIONS
  // ========================================
  const revealElements = document.querySelectorAll('.reveal, .reveal-left, .reveal-right, .reveal-scale');

  const revealObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('revealed');
      }
    });
  }, {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  });

  revealElements.forEach(el => revealObserver.observe(el));

  // ========================================
  // ANIMATED COUNTERS
  // ========================================
  const counters = document.querySelectorAll('[data-count]');

  const animateCounter = (el: Element) => {
    const target = parseInt(el.getAttribute('data-count') || '0');
    const duration = 2000;
    const step = target / (duration / 16);
    let current = 0;

    const updateCounter = () => {
      current += step;
      if (current < target) {
        el.textContent = Math.floor(current).toString();
        requestAnimationFrame(updateCounter);
      } else {
        el.textContent = target.toString();
      }
    };

    updateCounter();
  };

  const counterObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        animateCounter(entry.target);
        counterObserver.unobserve(entry.target);
      }
    });
  }, { threshold: 0.5 });

  counters.forEach(counter => counterObserver.observe(counter));

  // ========================================
  // SERVICES CAROUSEL
  // ========================================
  const carousel = document.getElementById('services-carousel');
  const track = carousel?.querySelector('.services-carousel__track') as HTMLElement;
  const prevBtn = document.getElementById('carousel-prev');
  const nextBtn = document.getElementById('carousel-next');

  if (track && prevBtn && nextBtn) {
    let currentPosition = 0;
    const cardWidth = 380 + 24;
    const getVisibleCards = () => Math.floor(window.innerWidth / cardWidth);
    const getMaxPosition = () => Math.max(0, (track.children.length - getVisibleCards()) * cardWidth);

    function updateButtons() {
      if (prevBtn && nextBtn) {
        (prevBtn as HTMLButtonElement).disabled = currentPosition <= 0;
        (nextBtn as HTMLButtonElement).disabled = currentPosition >= getMaxPosition();
      }
    }

    function scrollCarousel(direction: number) {
      currentPosition += direction * cardWidth;
      currentPosition = Math.max(0, Math.min(currentPosition, getMaxPosition()));
      track.style.transform = `translateX(-${currentPosition}px)`;
      updateButtons();
    }

    prevBtn.addEventListener('click', () => scrollCarousel(-1));
    nextBtn.addEventListener('click', () => scrollCarousel(1));

    // Drag/swipe functionality
    let isDragging = false;
    let startX = 0;
    let startPosition = 0;

    track.addEventListener('mousedown', (e) => {
      isDragging = true;
      startX = e.pageX;
      startPosition = currentPosition;
      track.style.transition = 'none';
    });

    track.addEventListener('mousemove', (e) => {
      if (!isDragging) return;
      e.preventDefault();
      const diff = startX - e.pageX;
      const newPosition = Math.max(0, Math.min(startPosition + diff, getMaxPosition()));
      track.style.transform = `translateX(-${newPosition}px)`;
    });

    const endDrag = (endX: number) => {
      if (!isDragging) return;
      isDragging = false;
      track.style.transition = 'transform 0.6s var(--ease-out-expo)';
      const diff = startX - endX;
      currentPosition = Math.max(0, Math.min(startPosition + diff, getMaxPosition()));
      currentPosition = Math.round(currentPosition / cardWidth) * cardWidth;
      currentPosition = Math.max(0, Math.min(currentPosition, getMaxPosition()));
      track.style.transform = `translateX(-${currentPosition}px)`;
      updateButtons();
    };

    track.addEventListener('mouseup', (e) => endDrag(e.pageX));
    track.addEventListener('mouseleave', () => {
      if (isDragging) {
        isDragging = false;
        track.style.transition = 'transform 0.6s var(--ease-out-expo)';
        track.style.transform = `translateX(-${currentPosition}px)`;
      }
    });

    // Touch support
    track.addEventListener('touchstart', (e) => {
      isDragging = true;
      startX = e.touches[0].pageX;
      startPosition = currentPosition;
      track.style.transition = 'none';
    }, { passive: true });

    track.addEventListener('touchmove', (e) => {
      if (!isDragging) return;
      const diff = startX - e.touches[0].pageX;
      const newPosition = Math.max(0, Math.min(startPosition + diff, getMaxPosition()));
      track.style.transform = `translateX(-${newPosition}px)`;
    }, { passive: true });

    track.addEventListener('touchend', (e) => {
      endDrag(e.changedTouches[0]?.pageX || startX);
    });

    window.addEventListener('resize', updateButtons);
    updateButtons();
  }

  // ========================================
  // PARALLAX EFFECTS
  // ========================================
  const hero = document.querySelector('.hero__bg-img') as HTMLElement;

  if (hero) {
    window.addEventListener('scroll', () => {
      const scrolled = window.scrollY;
      if (scrolled < window.innerHeight) {
        hero.style.transform = `scale(${1.05 - scrolled * 0.0001}) translateY(${scrolled * 0.3}px)`;
      }
    }, { passive: true });
  }
