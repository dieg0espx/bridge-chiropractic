          <p style="font-size: 0.9rem; color: var(--color-gray-dark);">Whiplash and accident recovery</p>
        </div>
      </div>

      <div style="text-align: center; margin-top: 64px;" data-animate="fade-up">
        <a href="/conditions" class="btn btn--primary btn--lg">See All Conditions</a>
      </div>
    </div>
  </section>

  <!-- Stats & Social Proof -->
  <section class="section" style="background: var(--color-off-white);">
    <div class="container">
      <div class="grid" style="grid-template-columns: 1fr 1fr; gap: 80px; align-items: center;">
        <div data-animate="fade-right">
          <span class="section__eyebrow" style="color: var(--color-accent);">Trusted Care</span>
