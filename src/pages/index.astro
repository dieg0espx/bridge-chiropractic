---
import Layout from '../layouts/Layout.astro';
import HeroVideo from '../components/HeroVideo.astro';
import SectionWrapper from '../components/SectionWrapper.astro';
import ContentGrid from '../components/ContentGrid.astro';
import OfferingCard from '../components/OfferingCard.astro';
---

<Layout title="Bridge Chiropractic - Transform Your Wellness | San Diego">
  <!-- Hero Video Section -->
  <HeroVideo
    videoUrl="https://assets.mixkit.co/videos/preview/mixkit-physiotherapist-doing-back-massage-to-a-client-5262-large.mp4"
    posterImage="https://images.unsplash.com/photo-1544161515-4ab6ce6db874?w=1920&h=1080&fit=crop"
    title="Discover Your Best Self"
    subtitle="Experience transformative chiropractic care designed for San Diego adults who want to stay active, vibrant, and pain-free."
    ctaText="Begin Your Journey"
    ctaLink="/contact"
    secondaryCtaText="Learn More"
    secondaryCtaLink="/about"
  />

  <!-- How It Works Section -->
  <SectionWrapper id="content" background="white" spacing="hero" containerWidth="normal">
    <div class="section__header" data-animate="fade-up">
      <span class="section__eyebrow">Your Journey</span>
      <h2 class="display-2">How It Works</h2>
      <p class="text-large" style="color: var(--color-gray-dark); max-width: 700px; margin: 0 auto;">
        A personalized approach to your wellness, from first consultation to lasting results.
      </p>
    </div>

    <ContentGrid columns={3} gap="xl" class="mt-4xl">
      <article class="glass" style="padding: var(--space-2xl); border-radius: var(--radius-xl); text-align: center;">
        <div class="icon-container icon-container--lg mx-auto">
          <span style="font-size: 32px; font-weight: 600; font-family: var(--font-heading);">1</span>
        </div>
        <h3 style="font-size: 1.5rem; margin-bottom: var(--space-md); font-family: var(--font-heading);">
          Initial Consultation
        </h3>
        <p style="color: var(--color-gray-dark); line-height: 1.7;">
          We listen to your story, understand your goals, and perform a comprehensive evaluation.
        </p>
      </article>

      <article class="glass" style="padding: var(--space-2xl); border-radius: var(--radius-xl); text-align: center;">
        <div class="icon-container icon-container--lg mx-auto">
          <span style="font-size: 32px; font-weight: 600; font-family: var(--font-heading);">2</span>
        </div>
        <h3 style="font-size: 1.5rem; margin-bottom: var(--space-md); font-family: var(--font-heading);">
          Personalized Plan
        </h3>
        <p style="color: var(--color-gray-dark); line-height: 1.7;">
          Together, we create a tailored care plan that fits your lifestyle and addresses your unique needs.
        </p>
      </article>

      <article class="glass" style="padding: var(--space-2xl); border-radius: var(--radius-xl); text-align: center;">
        <div class="icon-container icon-container--lg mx-auto">
          <span style="font-size: 32px; font-weight: 600; font-family: var(--font-heading);">3</span>
        </div>
        <h3 style="font-size: 1.5rem; margin-bottom: var(--space-md); font-family: var(--font-heading);">
          Ongoing Care
        </h3>
        <p style="color: var(--color-gray-dark); line-height: 1.7;">
          Experience gentle adjustments, movement training, and continuous support as you transform.
        </p>
      </article>
