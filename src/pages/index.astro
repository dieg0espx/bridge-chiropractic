---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="hero">
    <div class="container hero__container">
      <div class="hero__content">
        <h1 class="hero__title">Move Better.<br>Live Fuller.</h1>
        <p class="hero__subtitle">
          Personalized chiropractic care for San Diego adults who want to stay active and independent.
        </p>
        <div class="hero__cta">
          <a href="/contact" class="btn btn--primary">Book Your Visit</a>
          <a href="tel:8582777500" class="btn btn--secondary">Call (858) 277-7500</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar -->
  <section class="trust-bar">
    <div class="container">
      <div class="trust-bar__content">
        <div class="trust-bar__item">
          <span class="trust-bar__stars">★★★★★</span>
          <span>50+ 5-Star Reviews</span>
        </div>
        <span class="trust-bar__divider">•</span>
        <div class="trust-bar__item">
          <span>Serving San Diego with Personalized Care</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Differentiators -->
  <section class="section differentiators">
    <div class="container">
      <div class="section__header">
        <h2 class="section__title">Not Your Typical Chiropractor</h2>
      </div>
      <div class="grid grid--3 differentiators__grid">
        <div class="differentiator">
          <div class="differentiator__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
          </div>
          <h3 class="differentiator__title">No Rush</h3>
          <p class="differentiator__text">I take time to listen to you, understand your concerns, and explain what's happening in your body.</p>
        </div>
        <div class="differentiator">
          <div class="differentiator__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path></svg>
          </div>
          <h3 class="differentiator__title">Education First</h3>
          <p class="differentiator__text">Understand your body and why you're experiencing pain. Knowledge empowers you to take control of your health.</p>
        </div>
        <div class="differentiator">
          <div class="differentiator__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="20" x2="12" y2="10"></line><line x1="18" y1="20" x2="18" y2="4"></line><line x1="6" y1="20" x2="6" y2="16"></line></svg>
          </div>
          <h3 class="differentiator__title">Long-Term Solutions</h3>
          <p class="differentiator__text">No quick fixes or dependency-based care. We focus on sustainable improvement and your independence.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Preview -->
  <section class="section section--cream services-preview">
    <div class="container">
      <div class="section__header">
        <h2 class="section__title">More Than Just Adjustments</h2>
        <p class="section__subtitle">Comprehensive care tailored to your unique needs and goals.</p>
      </div>
      <div class="grid grid--3 services-preview__grid">
        <div class="card service-card">
          <div class="service-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20.24 12.24a6 6 0 0 0-8.49-8.49L5 10.5V19h8.5z"></path><line x1="16" y1="8" x2="2" y2="22"></line><line x1="17.5" y1="15" x2="9" y2="15"></line></svg>
          </div>
          <h3 class="service-card__title">Chiropractic Care</h3>
          <p class="service-card__text">Gentle and traditional adjustments tailored to your comfort level and needs.</p>
          <a href="/services#chiropractic" class="service-card__link">Learn More →</a>
        </div>
        <div class="card service-card">
          <div class="service-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M18 8h1a4 4 0 0 1 0 8h-1"></path><path d="M2 8h16v9a4 4 0 0 1-4 4H6a4 4 0 0 1-4-4V8z"></path><line x1="6" y1="1" x2="6" y2="4"></line><line x1="10" y1="1" x2="10" y2="4"></line><line x1="14" y1="1" x2="14" y2="4"></line></svg>
          </div>
          <h3 class="service-card__title">Soft Tissue Therapy</h3>
          <p class="service-card__text">Targeted muscle work to release tension and improve mobility.</p>
          <a href="/services#soft-tissue" class="service-card__link">Learn More →</a>
        </div>
        <div class="card service-card">
          <div class="service-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="5" r="3"></circle><line x1="12" y1="22" x2="12" y2="8"></line><path d="M5 12H2a10 10 0 0 0 20 0h-3"></path></svg>
          </div>
          <h3 class="service-card__title">Movement Training</h3>
          <p class="service-card__text">Mobility guidance and exercises to help you move better every day.</p>
          <a href="/services#movement" class="service-card__link">Learn More →</a>
        </div>
        <div class="card service-card">
          <div class="service-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect><line x1="8" y1="21" x2="16" y2="21"></line><line x1="12" y1="17" x2="12" y2="21"></line></svg>
          </div>
          <h3 class="service-card__title">Posture & Ergonomics</h3>
          <p class="service-card__text">Workstation assessments and posture correction for lasting comfort.</p>
          <a href="/services#posture" class="service-card__link">Learn More →</a>
        </div>
        <div class="card service-card service-card--featured">
          <div class="service-card__badge">Specialty</div>
          <div class="service-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 2a4 4 0 0 0-4 4v2H6a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V10a2 2 0 0 0-2-2h-2V6a4 4 0 0 0-4-4z"></path></svg>
          </div>
          <h3 class="service-card__title">Neuro Rehabilitation</h3>
          <p class="service-card__text">Specialized brain rehab that reduces fall risk and improves balance for adults 55+.</p>
          <a href="/services#neuro" class="service-card__link">Learn More →</a>
        </div>
        <div class="card service-card">
          <div class="service-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
          </div>
          <h3 class="service-card__title">Personalized Care Plans</h3>
          <p class="service-card__text">Individualized treatment plans designed around your specific goals.</p>
          <a href="/services#care-plans" class="service-card__link">Learn More →</a>
        </div>
      </div>
      <div class="text-center" style="margin-top: var(--space-xl);">
        <a href="/services" class="btn btn--secondary">View All Services</a>
      </div>
    </div>
  </section>

  <!-- Featured: Fall Prevention -->
  <section class="section section--light-blue featured">
    <div class="container">
      <div class="featured__grid">
        <div class="featured__image">
          <div class="featured__image-placeholder">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><circle cx="12" cy="5" r="3"></circle><line x1="12" y1="22" x2="12" y2="8"></line><path d="M5 12H2a10 10 0 0 0 20 0h-3"></path></svg>
            <span>Patient Care Image</span>
          </div>
        </div>
        <div class="featured__content">
          <h2 class="featured__title">Reduce Fall Risk & Stay Independent</h2>
          <p class="featured__text">
            Our specialized neuro/brain rehabilitation program is designed specifically for adults 55+ who want to maintain their independence and confidence. Through targeted exercises and assessments, we help reduce fall risk and improve balance.
          </p>
          <ul class="featured__list">
            <li>Comprehensive balance assessments</li>
            <li>Brain-based rehabilitation exercises</li>
            <li>Improved coordination and stability</li>
            <li>Greater confidence in daily activities</li>
          </ul>
          <a href="/services#neuro" class="btn btn--primary">Learn More</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="section testimonials">
    <div class="container">
      <div class="section__header">
        <h2 class="section__title">What Our Patients Say</h2>
      </div>
      <div class="grid grid--3 testimonials__grid">
        <div class="card testimonial">
          <div class="testimonial__quote">"</div>
          <p class="testimonial__text">Dr. Beyerl actually listens. For the first time, someone explained WHY my back hurts and gave me tools to fix it myself.</p>
          <div class="testimonial__author">
            <span class="testimonial__name">Margaret, 67</span>
            <span class="testimonial__location">Clairemont</span>
          </div>
        </div>
        <div class="card testimonial">
          <div class="testimonial__quote">"</div>
          <p class="testimonial__text">The calm environment is such a relief after years of rushed appointments elsewhere. I finally feel like a partner in my own care.</p>
          <div class="testimonial__author">
            <span class="testimonial__name">Robert, 72</span>
            <span class="testimonial__location">Kearny Mesa</span>
          </div>
        </div>
        <div class="card testimonial">
          <div class="testimonial__quote">"</div>
          <p class="testimonial__text">I came for back pain and discovered he could help with my balance issues too. I didn't know chiropractors did that!</p>
          <div class="testimonial__author">
            <span class="testimonial__name">Susan, 61</span>
            <span class="testimonial__location">University City</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Preview -->
  <section class="section section--cream about-preview">
    <div class="container">
      <div class="about-preview__grid">
        <div class="about-preview__image">
          <div class="about-preview__image-placeholder">
            <span>Dr. Nathan Beyerl</span>
          </div>
        </div>
        <div class="about-preview__content">
          <blockquote class="about-preview__quote">
            "I believe healthcare should empower you, not create dependency."
          </blockquote>
          <p>
            I'm Dr. Nathan Beyerl, and I founded The Bridge Chiropractic to offer a different kind of care. My approach emphasizes education, autonomy, and sustainable improvement—because you deserve to understand your body and take control of your health.
          </p>
          <a href="/about" class="btn btn--secondary">Meet Dr. Beyerl</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Location -->
  <section class="section location">
    <div class="container">
      <div class="location__grid">
        <div class="location__map">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3351.4!2d-117.2!3d32.8!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzLCsDQ4JzAwLjAiTiAxMTfCsDEyJzAwLjAiVw!5e0!3m2!1sen!2sus!4v1234567890"
            width="100%"
            height="400"
            style="border:0; border-radius: var(--radius-lg);"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
          </iframe>
        </div>
        <div class="location__info">
          <h2>Visit Us</h2>
          <address>
            <p><strong>The Bridge Chiropractic</strong></p>
            <p>4340 Genesee Ave, Suite 201<br>San Diego, CA 92117</p>
          </address>
          <div class="location__hours">
            <h3>Hours</h3>
            <p>Monday - Thursday: 9am - 6pm<br>Friday: 9am - 1pm</p>
          </div>
          <p class="location__phone">
            <a href="tel:8582777500">(858) 277-7500</a>
          </p>
          <div class="location__cta">
            <a href="/contact" class="btn btn--primary">Book Online</a>
            <a href="https://maps.google.com/?q=4340+Genesee+Ave+Suite+201+San+Diego+CA+92117" target="_blank" rel="noopener" class="btn btn--secondary">Get Directions</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Banner -->
  <section class="cta-banner">
    <div class="container">
      <h2 class="cta-banner__title">Ready to Start Feeling Better?</h2>
      <p class="cta-banner__text">Take the first step toward moving better and living fuller.</p>
      <div class="cta-banner__buttons">
        <a href="/contact" class="btn btn--white">Book Your Visit</a>
        <a href="tel:8582777500" class="btn btn--secondary" style="border-color: white; color: white;">Call (858) 277-7500</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero */
  .hero {
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-secondary-light) 100%);
    padding: var(--space-5xl) 0;
    min-height: 70vh;
    display: flex;
    align-items: center;
  }

  .hero__content {
    max-width: 650px;
  }

  .hero__title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-bottom: var(--space-lg);
    color: var(--color-charcoal);
  }

  .hero__subtitle {
    font-size: 1.25rem;
    color: var(--color-gray-dark);
    margin-bottom: var(--space-xl);
    line-height: 1.6;
  }

  .hero__cta {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  /* Trust Bar */
  .trust-bar {
    background: var(--color-white);
    padding: var(--space-lg) 0;
    border-bottom: 1px solid var(--color-gray-light);
  }

  .trust-bar__content {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-lg);
    flex-wrap: wrap;
  }

  .trust-bar__item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-gray-dark);
  }

  .trust-bar__stars {
    color: #F5C518;
    letter-spacing: 2px;
  }

  .trust-bar__divider {
    color: var(--color-gray-medium);
  }

  /* Differentiators */
  .differentiator {
    text-align: center;
    padding: var(--space-lg);
  }

  .differentiator__icon {
    color: var(--color-primary);
    margin-bottom: var(--space-md);
  }

  .differentiator__title {
    font-size: 1.5rem;
    margin-bottom: var(--space-sm);
  }

  .differentiator__text {
    color: var(--color-gray-dark);
    margin-bottom: 0;
  }

  /* Service Cards */
  .service-card {
    text-align: center;
    position: relative;
  }

  .service-card__badge {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    background: var(--color-primary);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-full);
  }

  .service-card__icon {
    color: var(--color-primary);
    margin-bottom: var(--space-md);
  }

  .service-card__title {
    font-size: 1.25rem;
    margin-bottom: var(--space-sm);
  }

  .service-card__text {
    color: var(--color-gray-dark);
    margin-bottom: var(--space-md);
    font-size: 0.95rem;
  }

  .service-card__link {
    font-weight: 600;
    font-size: 0.95rem;
  }

  /* Featured Section */
  .featured__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }

  .featured__image-placeholder {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    padding: var(--space-4xl);
    text-align: center;
    color: var(--color-gray-medium);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
  }

  .featured__title {
    margin-bottom: var(--space-md);
  }

  .featured__text {
    margin-bottom: var(--space-lg);
  }

  .featured__list {
    margin-bottom: var(--space-xl);
    padding-left: var(--space-lg);
  }

  .featured__list li {
    margin-bottom: var(--space-sm);
    color: var(--color-gray-dark);
  }

  /* Testimonials */
  .testimonial {
    background: var(--color-accent);
    border: none;
  }

  .testimonial__quote {
    font-family: var(--font-heading);
    font-size: 4rem;
    color: var(--color-secondary);
    line-height: 1;
    margin-bottom: -1rem;
  }

  .testimonial__text {
    font-style: italic;
    font-size: 1.1rem;
    margin-bottom: var(--space-lg);
  }

  .testimonial__author {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .testimonial__name {
    font-weight: 600;
    color: var(--color-charcoal);
  }

  .testimonial__location {
    font-size: 0.875rem;
    color: var(--color-gray-dark);
  }

  /* About Preview */
  .about-preview__grid {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }

  .about-preview__image-placeholder {
    width: 300px;
    height: 300px;
    background: var(--color-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-gray-medium);
    font-size: 1.25rem;
  }

  .about-preview__quote {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-style: italic;
    color: var(--color-primary);
    border: none;
    padding: 0;
    margin: 0 0 var(--space-lg) 0;
  }

  /* Location */
  .location__grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: var(--space-3xl);
    align-items: start;
  }

  .location__info h2 {
    margin-bottom: var(--space-lg);
  }

  .location__info address {
    font-style: normal;
    margin-bottom: var(--space-lg);
  }

  .location__hours {
    margin-bottom: var(--space-lg);
  }

  .location__hours h3 {
    font-size: 1rem;
    margin-bottom: var(--space-sm);
  }

  .location__phone {
    margin-bottom: var(--space-lg);
  }

  .location__phone a {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .location__cta {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  /* CTA Banner */
  .cta-banner {
    background: var(--color-primary);
    color: var(--color-white);
    padding: var(--space-4xl) 0;
    text-align: center;
  }

  .cta-banner__title {
    color: var(--color-white);
    margin-bottom: var(--space-md);
  }

  .cta-banner__text {
    font-size: 1.125rem;
    margin-bottom: var(--space-xl);
    opacity: 0.9;
  }

  .cta-banner__buttons {
    display: flex;
    justify-content: center;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .featured__grid,
    .about-preview__grid,
    .location__grid {
      grid-template-columns: 1fr;
    }

    .about-preview__grid {
      text-align: center;
    }

    .about-preview__image-placeholder {
      margin: 0 auto;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: var(--space-3xl) 0;
      min-height: auto;
    }

    .hero__cta {
      flex-direction: column;
    }

    .hero__cta .btn {
      width: 100%;
    }
  }
</style>
