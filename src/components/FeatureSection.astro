---
/**
 * FeatureSection Component
 *
 * Replicates the lifetime.life "Love Your Life" three-column feature section pattern
 * with premium aesthetics, generous whitespace, and staggered animations.
 *
 * @props {string} eyebrow - Small text above title (e.g., "Our Approach")
 * @props {string} title - Main section heading
 * @props {string} subtitle - Supporting text below title
 * @props {Array} features - Array of feature objects:
 *   - image?: string - Feature image URL
 *   - icon?: string - SVG icon markup (if no image)
 *   - title: string - Feature heading
 *   - description: string - Feature description text
 *   - link?: string - Optional CTA link URL
 *   - linkText?: string - Optional CTA link text (default: "Learn More")
 *
 * @example
 * <FeatureSection
 *   eyebrow="Why Choose Us"
 *   title="Love Your Life"
 *   subtitle="Experience wellness that transforms your daily routine"
 *   features={[
 *     {
 *       image: "/path/to/image.jpg",
 *       title: "Expert Care",
 *       description: "Personalized treatment plans...",
 *       link: "/services",
 *       linkText: "Explore Services"
 *     }
 *   ]}
 * />
 */

interface Feature {
  image?: string;
  icon?: string;
  title: string;
  description: string;
  link?: string;
  linkText?: string;
}

interface Props {
  eyebrow: string;
  title: string;
  subtitle: string;
  features: Feature[];
  background?: 'white' | 'gray' | 'dark';
  centered?: boolean;
}

const {
  eyebrow,
  title,
  subtitle,
  features,
  background = 'white',
  centered = true
} = Astro.props;

const backgroundClasses = {
  white: '',
  gray: 'section--gray',
  dark: 'section--dark'
};
---

<section class={`section feature-section ${backgroundClasses[background]}`}>
  <div class="container">
    <!-- Section Header -->
    <div class={`section__header ${centered ? '' : 'section__header--left'}`} data-animate="fade-up">
      <span class="section__eyebrow">{eyebrow}</span>
      <h2 class="display-2">{title}</h2>
      <p class="text-large section__subtitle">{subtitle}</p>
    </div>

    <!-- Features Grid -->
    <div class="feature-grid">
      {features.map((feature, index) => {
        const delay = ((index % 3) * 100 + 100).toString();

        return (
          <article
            class="feature-card"
            data-animate="fade-up"
            data-animate-delay={delay}
          >
            <!-- Feature Visual (Image or Icon) -->
            <div class="feature-card__visual">
              {feature.image ? (
                <div class="feature-card__image-wrapper">
                  <img
                    src={feature.image}
                    alt={feature.title}
                    class="feature-card__image"
                    loading="lazy"
                  />
                </div>
              ) : feature.icon ? (
                <div class="feature-card__icon" set:html={feature.icon} />
              ) : null}
            </div>

            <!-- Feature Content -->
            <div class="feature-card__content">
              <h3 class="feature-card__title">{feature.title}</h3>
              <p class="feature-card__description">{feature.description}</p>

              {feature.link && (
                <a href={feature.link} class="feature-card__link">
                  {feature.linkText || 'Learn More'}
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    aria-hidden="true"
                  >
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                  </svg>
                </a>
              )}
            </div>
          </article>
        );
      })}
    </div>
  </div>
</section>

<style>
  /* ==========================================
     FEATURE SECTION STYLING
     ========================================== */

  .feature-section {
    padding: var(--space-5xl) 0;
    position: relative;
  }

  /* Section Header Alignment */
  .section__header--left {
    text-align: left !important;
    max-width: 100%;
  }

  .section__header--left .section__subtitle {
    margin-left: 0;
  }

  .section__eyebrow {
    color: var(--color-accent);
  }

  /* Dark mode adjustments */
  .section--dark .section__eyebrow {
    color: var(--color-accent);
  }

  /* Feature Grid Layout */
  .feature-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-2xl);
    margin-top: var(--space-4xl);
  }

  /* ==========================================
     FEATURE CARD STYLING
     ========================================== */

  .feature-card {
    background: var(--color-white);
    border-radius: var(--radius-xl);
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.04);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  /* Dark mode card styling */
  .section--dark .feature-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
  }

  /* Hover Effects */
  .feature-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
    border-color: rgba(0, 0, 0, 0.08);
  }

  .section--dark .feature-card:hover {
    border-color: rgba(255, 255, 255, 0.2);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
  }

  /* ==========================================
     FEATURE VISUAL (IMAGE OR ICON)
     ========================================== */

  .feature-card__visual {
    width: 100%;
    position: relative;
  }

  /* Image Styling */
  .feature-card__image-wrapper {
    width: 100%;
    aspect-ratio: 4/3;
    overflow: hidden;
    background: var(--color-gray-light);
  }

  .feature-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .feature-card:hover .feature-card__image {
    transform: scale(1.05);
  }

  /* Icon Styling */
  .feature-card__icon {
    width: 100%;
    aspect-ratio: 4/3;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary-light) 0%, var(--color-off-white) 100%);
    padding: var(--space-3xl);
    transition: background 0.4s ease;
  }

  .section--dark .feature-card__icon {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0.04) 100%);
  }

  .feature-card:hover .feature-card__icon {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
  }

  .feature-card__icon :global(svg) {
    width: 80px;
    height: 80px;
    stroke: var(--color-primary);
    transition: all 0.4s ease;
  }

  .feature-card:hover .feature-card__icon :global(svg) {
    stroke: var(--color-white);
    transform: scale(1.1);
  }

  .section--dark .feature-card__icon :global(svg) {
    stroke: var(--color-white);
  }

  /* ==========================================
     FEATURE CONTENT
     ========================================== */

  .feature-card__content {
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .feature-card__title {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.3;
    color: var(--color-charcoal);
    margin-bottom: var(--space-md);
    transition: color var(--transition-normal);
  }

  .section--dark .feature-card__title {
    color: var(--color-white);
  }

  .feature-card__description {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-gray-dark);
    margin-bottom: var(--space-lg);
    flex-grow: 1;
  }

  .section--dark .feature-card__description {
    color: rgba(255, 255, 255, 0.8);
  }

  /* ==========================================
     FEATURE LINK / CTA
     ========================================== */

  .feature-card__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-weight: 600;
    font-size: 0.9375rem;
    color: var(--color-primary);
    text-decoration: none;
    transition: gap var(--transition-normal), color var(--transition-normal);
    margin-top: auto;
  }

  .section--dark .feature-card__link {
    color: var(--color-white);
  }

  .feature-card__link:hover {
    gap: var(--space-sm);
    color: var(--color-primary-dark);
  }

  .section--dark .feature-card__link:hover {
    color: var(--color-accent);
  }

  .feature-card__link svg {
    transition: transform var(--transition-normal);
  }

  .feature-card__link:hover svg {
    transform: translateX(4px);
  }

  /* ==========================================
     RESPONSIVE DESIGN
     ========================================== */

  /* Tablet: 2 columns */
  @media (max-width: 1024px) {
    .feature-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-xl);
      margin-top: var(--space-3xl);
    }

    .feature-card__content {
      padding: var(--space-lg);
    }

    .feature-card__title {
      font-size: 1.375rem;
    }

    .feature-card__icon {
      padding: var(--space-2xl);
    }

    .feature-card__icon :global(svg) {
      width: 64px;
      height: 64px;
    }
  }

  /* Mobile: 1 column */
  @media (max-width: 768px) {
    .feature-section {
      padding: var(--space-3xl) 0;
    }

    .feature-grid {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
      margin-top: var(--space-2xl);
    }

    .feature-card {
      border-radius: var(--radius-lg);
    }

    .feature-card__content {
      padding: var(--space-lg);
    }

    .feature-card__title {
      font-size: 1.25rem;
      margin-bottom: var(--space-sm);
    }

    .feature-card__description {
      font-size: 0.9375rem;
      margin-bottom: var(--space-md);
    }

    .feature-card__image-wrapper,
    .feature-card__icon {
      aspect-ratio: 16/9;
    }

    .feature-card__icon {
      padding: var(--space-xl);
    }

    .feature-card__icon :global(svg) {
      width: 56px;
      height: 56px;
    }

    /* Reduce hover effects on mobile */
    .feature-card:hover {
      transform: translateY(-4px);
    }
  }

  /* Small mobile adjustments */
  @media (max-width: 480px) {
    .feature-card__content {
      padding: var(--space-md);
    }

    .feature-card__title {
      font-size: 1.125rem;
    }

    .feature-card__description {
      font-size: 0.875rem;
    }

    .feature-card__link {
      font-size: 0.875rem;
    }
  }

  /* ==========================================
     ACCESSIBILITY
     ========================================== */

  /* Focus styles for keyboard navigation */
  .feature-card:focus-visible {
    outline: 3px solid var(--color-primary);
    outline-offset: 2px;
  }

  .feature-card__link:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
    border-radius: 4px;
  }

  /* Reduce motion for users who prefer it */
  @media (prefers-reduced-motion: reduce) {
    .feature-card,
    .feature-card__image,
    .feature-card__icon,
    .feature-card__icon :global(svg),
    .feature-card__link,
    .feature-card__link svg {
      transition: none !important;
    }

    .feature-card:hover {
      transform: none;
    }

    .feature-card:hover .feature-card__image {
      transform: none;
    }
  }

  /* High contrast mode adjustments */
  @media (prefers-contrast: high) {
    .feature-card {
      border: 2px solid currentColor;
    }

    .feature-card__link {
      text-decoration: underline;
    }
  }
</style>
