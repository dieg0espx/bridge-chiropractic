---
interface Props {
  videoUrl: string;
  posterImage?: string;
  overlayOpacity?: number;
  class?: string;
}

const { videoUrl, posterImage, overlayOpacity = 0.6, class: className } = Astro.props;
---

<div class={`video-background ${className || ''}`}>
  <video
    class="video-background__video"
    autoplay
    muted
    loop
    playsinline
    poster={posterImage}
  >
    <source src={videoUrl} type="video/mp4" />
  </video>
  <div class="video-background__overlay" style={`opacity: ${overlayOpacity}`}></div>
  <div class="video-background__content">
    <slot />
  </div>
</div>

<style>
  .video-background {
    position: relative;
    overflow: hidden;
  }

  .video-background__video {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translate(-50%, -50%);
    object-fit: cover;
    z-index: 0;
  }

  .video-background__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.85) 0%,
      rgba(0, 0, 0, 0.85) 100%
    );
    z-index: 1;
  }

  .video-background__content {
    position: relative;
    z-index: 2;
  }

  /* Disable video on devices that prefer reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .video-background__video {
      display: none;
    }

    .video-background__overlay {
      background: linear-gradient(
        135deg,
        rgba(0, 0, 0, 0.95) 0%,
        rgba(0, 0, 0, 0.95) 100%
      );
    }
  }

  /* Pause video on mobile to save battery */
  @media (max-width: 768px) {
    .video-background__video {
      display: none;
    }

    .video-background__overlay {
      background: linear-gradient(
        135deg,
        rgba(0, 0, 0, 0.95) 0%,
        rgba(0, 0, 0, 0.95) 100%
      );
    }
  }
</style>
