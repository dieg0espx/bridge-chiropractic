---
/**
 * HeroVideo Component
 * Premium full-screen video hero with glassmorphism and floating particles
 * Signature component for lifetime.life aesthetic
 */

interface Props {
  videoUrl: string;
  posterImage: string;
  title: string;
  subtitle: string;
  ctaText: string;
  ctaLink: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  videoUrl,
  posterImage,
  title,
  subtitle,
  ctaText,
  ctaLink,
  secondaryCtaText,
  secondaryCtaLink,
} = Astro.props;
---

<section class="hero-video" aria-label="Hero section">
  <!-- Video Background -->
  <video
    class="hero-video__video"
    autoplay
    muted
    loop
    playsinline
    poster={posterImage}
    aria-hidden="true"
  >
    <source src={videoUrl} type="video/mp4" />
    Your browser does not support the video tag.
  </video>

  <!-- Dark Overlay Gradient -->
  <div class="hero-video__overlay" aria-hidden="true"></div>

  <!-- Floating Particles -->
  <div class="hero-video__particles" aria-hidden="true">
    {Array.from({ length: 12 }, (_, i) => (
      <div
        class="particle"
        style={`
          left: ${Math.random() * 100}%;
          top: ${Math.random() * 100}%;
          animation-delay: ${Math.random() * 5}s;
          animation-duration: ${15 + Math.random() * 10}s;
        `}
      />
    ))}
  </div>

  <!-- Content Container with Glassmorphism -->
  <div class="hero-video__content">
    <div class="hero-video__text-container glass">
      <h1 class="hero-video__title">{title}</h1>
      <p class="hero-video__subtitle">{subtitle}</p>
      <div class="hero-video__cta-group">
        <a href={ctaLink} class="btn btn--primary btn--lg">
          {ctaText}
        </a>
        {secondaryCtaText && secondaryCtaLink && (
          <a href={secondaryCtaLink} class="btn btn--white btn--lg">
            {secondaryCtaText}
          </a>
        )}
      </div>
    </div>
  </div>

  <!-- Video Controls -->
  <div class="hero-video__controls">
    <button
      class="video-control-btn"
      id="playPauseBtn"
      aria-label="Play or pause video"
      title="Play/Pause"
    >
      <svg class="control-icon control-icon--pause" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M10 4H6V20H10V4Z" fill="currentColor"/>
        <path d="M18 4H14V20H18V4Z" fill="currentColor"/>
      </svg>
      <svg class="control-icon control-icon--play" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <path d="M8 5V19L19 12L8 5Z" fill="currentColor"/>
      </svg>
    </button>
    <button
      class="video-control-btn"
      id="muteBtn"
      aria-label="Mute or unmute video"
      title="Mute/Unmute"
    >
      <svg class="control-icon control-icon--unmute" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M11 5L6 9H2V15H6L11 19V5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M15.54 8.46C16.4774 9.39764 17.0039 10.6692 17.0039 11.995C17.0039 13.3208 16.4774 14.5924 15.54 15.53" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <svg class="control-icon control-icon--mute" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <path d="M11 5L6 9H2V15H6L11 19V5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <line x1="23" y1="9" x2="17" y2="15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        <line x1="17" y1="9" x2="23" y2="15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>
  </div>

  <!-- Scroll Indicator -->
  <a href="#content" class="hero-video__scroll-indicator" aria-label="Scroll to content">
    <div class="scroll-indicator__mouse">
      <div class="scroll-indicator__wheel"></div>
    </div>
    <span class="scroll-indicator__text">Scroll</span>
  </a>
</section>

<style>
  /* ========================================
     HERO VIDEO COMPONENT
     ======================================== */

  .hero-video {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Video Background */
  .hero-video__video {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translate(-50%, -50%);
    object-fit: cover;
    z-index: 0;
  }

  /* Dark Overlay with Gradient */
  .hero-video__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.6) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      rgba(0, 0, 0, 0.5) 100%
    );
    z-index: 1;
  }

  /* Floating Particles */
  .hero-video__particles {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    pointer-events: none;
    z-index: 2;
    overflow: hidden;
  }

  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    animation: floatParticle 20s infinite ease-in-out;
  }

  @keyframes floatParticle {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.3;
    }
    25% {
      transform: translate(30px, -80px) scale(1.1);
      opacity: 0.6;
    }
    50% {
      transform: translate(-20px, -150px) scale(1.3);
      opacity: 0.8;
    }
    75% {
      transform: translate(50px, -100px) scale(1.1);
      opacity: 0.5;
    }
  }

  /* Content Container */
  .hero-video__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1200px;
    padding: 0 var(--space-2xl);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Glassmorphism Text Container */
  .hero-video__text-container {
    padding: clamp(2rem, 5vw, 4rem) clamp(2rem, 5vw, 5rem);
    border-radius: var(--radius-xl);
    text-align: center;
    animation: fadeInUp 1s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Typography */
  .hero-video__title {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--color-charcoal);
    margin-bottom: clamp(1rem, 3vw, 1.5rem);
    animation: fadeInUp 1s ease-out 0.2s backwards;
  }

  .hero-video__subtitle {
    font-family: var(--font-body);
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    font-weight: 400;
    line-height: 1.6;
    color: var(--color-gray-dark);
    max-width: 700px;
    margin: 0 auto clamp(2rem, 4vw, 3rem);
    animation: fadeInUp 1s ease-out 0.4s backwards;
  }

  /* CTA Button Group */
  .hero-video__cta-group {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-lg);
    justify-content: center;
    align-items: center;
    animation: fadeInUp 1s ease-out 0.6s backwards;
  }

  /* Video Controls */
  .hero-video__controls {
    position: absolute;
    bottom: var(--space-2xl);
    right: var(--space-2xl);
    z-index: 4;
    display: flex;
    gap: var(--space-md);
  }

  .video-control-btn {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-normal);
    box-shadow: var(--shadow-md);
    color: var(--color-charcoal);
  }

  .video-control-btn:hover {
    background: var(--color-white);
    transform: scale(1.1);
    box-shadow: var(--shadow-lg);
  }

  .video-control-btn:active {
    transform: scale(0.95);
  }

  .video-control-btn:focus-visible {
    outline: 2px solid var(--color-white);
    outline-offset: 4px;
  }

  .control-icon {
    flex-shrink: 0;
  }

  /* Scroll Indicator */
  .hero-video__scroll-indicator {
    position: absolute;
    bottom: var(--space-2xl);
    left: 50%;
    transform: translateX(-50%);
    z-index: 4;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    color: rgba(255, 255, 255, 0.9);
    transition: all var(--transition-normal);
    animation: fadeIn 1s ease-out 1s backwards, float 3s ease-in-out infinite 2s;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes float {
    0%, 100% { transform: translate(-50%, 0); }
    50% { transform: translate(-50%, -10px); }
  }

  .hero-video__scroll-indicator:hover {
    color: var(--color-white);
    transform: translateX(-50%) translateY(-4px);
  }

  .hero-video__scroll-indicator:focus-visible {
    outline: 2px solid var(--color-white);
    outline-offset: 4px;
    border-radius: var(--radius-md);
  }

  .scroll-indicator__mouse {
    width: 28px;
    height: 44px;
    border: 2px solid currentColor;
    border-radius: 14px;
    position: relative;
    display: flex;
    justify-content: center;
    padding-top: 8px;
  }

  .scroll-indicator__wheel {
    width: 4px;
    height: 8px;
    background: currentColor;
    border-radius: 2px;
    animation: scrollWheel 2s ease-in-out infinite;
  }

  @keyframes scrollWheel {
    0% {
      opacity: 1;
      transform: translateY(0);
    }
    100% {
      opacity: 0;
      transform: translateY(12px);
    }
  }

  .scroll-indicator__text {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .hero-video {
      min-height: 550px;
    }

    .hero-video__content {
      padding: 0 var(--space-xl);
    }

    .hero-video__controls {
      bottom: var(--space-xl);
      right: var(--space-xl);
      gap: var(--space-sm);
    }

    .video-control-btn {
      width: 48px;
      height: 48px;
    }
  }

  @media (max-width: 768px) {
    .hero-video {
      height: 80vh;
      min-height: 500px;
    }

    .hero-video__text-container {
      padding: clamp(1.5rem, 4vw, 2.5rem);
    }

    .hero-video__cta-group {
      flex-direction: column;
      width: 100%;
      gap: var(--space-md);
    }

    .hero-video__cta-group .btn {
      width: 100%;
      max-width: 300px;
    }

    .hero-video__controls {
      bottom: var(--space-lg);
      right: var(--space-lg);
    }

    .video-control-btn {
      width: 44px;
      height: 44px;
    }

    .hero-video__scroll-indicator {
      bottom: var(--space-lg);
    }
  }

  @media (max-width: 480px) {
    .hero-video {
      height: 70vh;
      min-height: 450px;
    }

    .hero-video__content {
      padding: 0 var(--space-lg);
    }

    .hero-video__text-container {
      padding: var(--space-xl) var(--space-lg);
    }

    .video-control-btn {
      width: 40px;
      height: 40px;
    }

    .control-icon {
      width: 16px;
      height: 16px;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-video__text-container,
    .hero-video__title,
    .hero-video__subtitle,
    .hero-video__cta-group,
    .hero-video__scroll-indicator {
      animation: none;
    }

    .particle {
      animation: none;
      opacity: 0.2;
    }

    .scroll-indicator__wheel {
      animation: none;
    }
  }

  /* High Contrast Mode Support */
  @media (prefers-contrast: high) {
    .hero-video__overlay {
      background: rgba(0, 0, 0, 0.8);
    }

    .hero-video__text-container {
      background: rgba(255, 255, 255, 0.95);
    }

    .video-control-btn {
      background: var(--color-white);
      border: 2px solid var(--color-charcoal);
    }
  }
</style>

<script>
  /**
   * Video Control Functionality
   * Handles play/pause and mute/unmute controls
   */

  // Wait for DOM to be ready
  document.addEventListener('DOMContentLoaded', () => {
    const video = document.querySelector('.hero-video__video') as HTMLVideoElement;
    const playPauseBtn = document.getElementById('playPauseBtn');
    const muteBtn = document.getElementById('muteBtn');

    if (!video || !playPauseBtn || !muteBtn) {
      console.warn('HeroVideo: Required elements not found');
      return;
    }

    const playIcon = playPauseBtn.querySelector('.control-icon--play') as HTMLElement;
    const pauseIcon = playPauseBtn.querySelector('.control-icon--pause') as HTMLElement;
    const muteIcon = muteBtn.querySelector('.control-icon--mute') as HTMLElement;
    const unmuteIcon = muteBtn.querySelector('.control-icon--unmute') as HTMLElement;

    // Track video state
    let isPlaying = true;
    let isMuted = true;

    /**
     * Toggle play/pause state
     */
    function togglePlayPause() {
      if (video.paused) {
        video.play().catch((error) => {
          console.error('HeroVideo: Error playing video:', error);
        });
        isPlaying = true;
        playIcon.style.display = 'none';
        pauseIcon.style.display = 'block';
        playPauseBtn?.setAttribute('aria-label', 'Pause video');
      } else {
        video.pause();
        isPlaying = false;
        playIcon.style.display = 'block';
        pauseIcon.style.display = 'none';
        playPauseBtn?.setAttribute('aria-label', 'Play video');
      }
    }

    /**
     * Toggle mute/unmute state
     */
    function toggleMute() {
      video.muted = !video.muted;
      isMuted = video.muted;

      if (isMuted) {
        muteIcon.style.display = 'none';
        unmuteIcon.style.display = 'block';
        muteBtn?.setAttribute('aria-label', 'Unmute video');
      } else {
        muteIcon.style.display = 'block';
        unmuteIcon.style.display = 'none';
        muteBtn?.setAttribute('aria-label', 'Mute video');
      }
    }

    // Event Listeners
    playPauseBtn.addEventListener('click', togglePlayPause);
    muteBtn.addEventListener('click', toggleMute);

    // Keyboard controls
    playPauseBtn.addEventListener('keydown', (e: KeyboardEvent) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        togglePlayPause();
      }
    });

    muteBtn.addEventListener('keydown', (e: KeyboardEvent) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        toggleMute();
      }
    });

    // Handle video errors
    video.addEventListener('error', (e) => {
      console.error('HeroVideo: Video loading error:', e);
      // Show poster image on error
      video.style.opacity = '0';
    });

    // Handle video end (though it loops)
    video.addEventListener('ended', () => {
      video.play().catch((error) => {
        console.error('HeroVideo: Error restarting video:', error);
      });
    });

    // Smooth scroll for scroll indicator
    const scrollIndicator = document.querySelector('.hero-video__scroll-indicator');
    if (scrollIndicator) {
      scrollIndicator.addEventListener('click', (e: Event) => {
        e.preventDefault();
        const target = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
        if (target) {
          const element = document.querySelector(target);
          if (element) {
            element.scrollIntoView({ behavior: 'smooth', block: 'start' });
          } else {
            // If no target element, scroll one viewport down
            window.scrollBy({ top: window.innerHeight, behavior: 'smooth' });
          }
        }
      });
    }

    // Pause video when not in viewport (performance optimization)
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (!entry.isIntersecting && isPlaying) {
            video.pause();
          } else if (entry.isIntersecting && isPlaying) {
            video.play().catch((error) => {
              console.error('HeroVideo: Error playing video:', error);
            });
          }
        });
      },
      { threshold: 0.25 }
    );

    observer.observe(video);
  });
</script>
