---
/**
 * HeroVideo Component
 * Premium full-screen video hero with glassmorphism and floating particles
 * Signature component for lifetime.life aesthetic
 */

interface Props {
  videoUrl?: string;
  posterImage: string;
  title: string;
  subtitle: string;
  ctaText: string;
  ctaLink: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  posterImage,
  title,
  subtitle,
  ctaText,
  ctaLink,
  secondaryCtaText,
  secondaryCtaLink,
} = Astro.props;

// Array of sports videos to randomly cycle through
const videoUrls = [
  'https://res.cloudinary.com/dku1gnuat/video/upload/v1772139027/fitness-exercise-and-running-woman-at-beach-for-2025-12-17-11-33-16-utc_htkq3f.mov',
  'https://res.cloudinary.com/dku1gnuat/video/upload/v1772139018/basketball-players-playing-basketball-4k-2026-02-02-07-58-09-utc_lcrizu.mov',
  'https://res.cloudinary.com/dku1gnuat/video/upload/v1772139030/sporty-girl-rock-climber-climbs-the-climbing-wall-2025-12-17-13-16-27-utc_aebiuq.mov',
  'https://res.cloudinary.com/dku1gnuat/video/upload/v1772139047/boxing-2025-12-17-23-07-06-utc_jaaqa4.mov'
];
---

<section class="hero-video" aria-label="Hero section">
  <!-- Multiple Video Elements for Smooth Transitions -->
  {videoUrls.map((url, index) => (
    <video
      class={`hero-video__video ${index === 0 ? 'active' : ''}`}
      data-video-index={index}
      autoplay={index === 0}
      muted
      loop
      playsinline
      aria-hidden="true"
    >
      <source src={url} type="video/mp4" />
    </video>
  ))}

  <!-- Dark Overlay Gradient -->
  <div class="hero-video__overlay" aria-hidden="true"></div>

  <!-- Floating Particles -->
  <div class="hero-video__particles" aria-hidden="true">
    {Array.from({ length: 12 }, (_, i) => (
      <div
        class="particle"
        style={`
          left: ${Math.random() * 100}%;
          top: ${Math.random() * 100}%;
          animation-delay: ${Math.random() * 5}s;
          animation-duration: ${15 + Math.random() * 10}s;
        `}
      />
    ))}
  </div>

  <!-- Content Container with Minimal Overlay -->
  <div class="hero-video__content">
    <div class="hero-video__text-container">
      <h1 class="hero-video__title">{title}</h1>
      <p class="hero-video__subtitle">{subtitle}</p>
      <div class="hero-video__cta-group">
        <a href={ctaLink} class="btn btn--primary btn--lg">
          {ctaText}
        </a>
        {secondaryCtaText && secondaryCtaLink && (
          <a href={secondaryCtaLink} class="btn btn--white btn--lg">
            {secondaryCtaText}
          </a>
        )}
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <a href="#content" class="hero-video__scroll-indicator" aria-label="Scroll to content">
    <div class="scroll-indicator__mouse">
      <div class="scroll-indicator__wheel"></div>
    </div>
    <span class="scroll-indicator__text">Scroll</span>
  </a>
</section>

<style>
  /* ========================================
     HERO VIDEO COMPONENT
     ======================================== */

  .hero-video {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Video Background */
  .hero-video__video {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translate(-50%, -50%);
    object-fit: cover;
    z-index: 0;
    opacity: 0;
    transition: opacity 0.8s ease-in-out;
  }

  .hero-video__video.active {
    opacity: 1;
  }

  /* Dark Overlay with Gradient */
  .hero-video__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.6) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      rgba(0, 0, 0, 0.5) 100%
    );
    z-index: 1;
  }

  /* Floating Particles */
  .hero-video__particles {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    pointer-events: none;
    z-index: 2;
    overflow: hidden;
  }

  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    animation: floatParticle 20s infinite ease-in-out;
  }

  @keyframes floatParticle {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.3;
    }
    25% {
      transform: translate(30px, -80px) scale(1.1);
      opacity: 0.6;
    }
    50% {
      transform: translate(-20px, -150px) scale(1.3);
      opacity: 0.8;
    }
    75% {
      transform: translate(50px, -100px) scale(1.1);
      opacity: 0.5;
    }
  }

  /* Content Container */
  .hero-video__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1200px;
    padding: 0 var(--space-2xl);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Minimal Text Container - No Background */
  .hero-video__text-container {
    text-align: center;
    animation: fadeInUp 1s ease-out;
    max-width: 800px;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Typography - Minimal & Elegant */
  .hero-video__title {
    font-family: var(--font-heading);
    font-size: clamp(2.75rem, 5vw, 4.5rem);
    font-weight: 400;
    line-height: 1.2;
    letter-spacing: -0.01em;
    color: var(--color-white);
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
    margin-bottom: clamp(0.75rem, 1.5vw, 1rem);
    animation: fadeInUp 1s ease-out 0.2s backwards;
  }

  .hero-video__subtitle {
    font-family: var(--font-body);
    font-size: clamp(1.125rem, 1.8vw, 1.375rem);
    font-weight: 400;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.95);
    text-shadow: 0 2px 15px rgba(0, 0, 0, 0.3);
    max-width: 560px;
    margin: 0 auto clamp(1.5rem, 2.5vw, 2rem);
    animation: fadeInUp 1s ease-out 0.4s backwards;
  }

  /* CTA Button Group */
  .hero-video__cta-group {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-lg);
    justify-content: center;
    align-items: center;
    animation: fadeInUp 1s ease-out 0.6s backwards;
  }


  /* Scroll Indicator */
  .hero-video__scroll-indicator {
    position: absolute;
    bottom: var(--space-2xl);
    left: 50%;
    transform: translateX(-50%);
    z-index: 4;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    color: rgba(255, 255, 255, 0.9);
    transition: all var(--transition-normal);
    animation: fadeIn 1s ease-out 1s backwards, float 3s ease-in-out infinite 2s;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes float {
    0%, 100% { transform: translate(-50%, 0); }
    50% { transform: translate(-50%, -10px); }
  }

  .hero-video__scroll-indicator:hover {
    color: var(--color-white);
    transform: translateX(-50%) translateY(-4px);
  }

  .hero-video__scroll-indicator:focus-visible {
    outline: 2px solid var(--color-white);
    outline-offset: 4px;
    border-radius: var(--radius-md);
  }

  .scroll-indicator__mouse {
    width: 28px;
    height: 44px;
    border: 2px solid currentColor;
    border-radius: 14px;
    position: relative;
    display: flex;
    justify-content: center;
    padding-top: 8px;
  }

  .scroll-indicator__wheel {
    width: 4px;
    height: 8px;
    background: currentColor;
    border-radius: 2px;
    animation: scrollWheel 2s ease-in-out infinite;
  }

  @keyframes scrollWheel {
    0% {
      opacity: 1;
      transform: translateY(0);
    }
    100% {
      opacity: 0;
      transform: translateY(12px);
    }
  }

  .scroll-indicator__text {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .hero-video {
      min-height: 550px;
    }

    .hero-video__content {
      padding: var(--space-4xl) var(--space-xl) var(--space-2xl);
    }
  }

  @media (max-width: 768px) {
    .hero-video {
      height: 100vh;
      min-height: 600px;
    }

    .hero-video__content {
      padding: var(--space-5xl) var(--space-lg) var(--space-3xl);
    }

    .hero-video__title {
      font-size: clamp(2rem, 8vw, 3rem);
      margin-bottom: var(--space-md);
    }

    .hero-video__subtitle {
      font-size: clamp(1rem, 4vw, 1.125rem);
      margin-bottom: var(--space-xl);
    }

    .hero-video__cta-group {
      flex-direction: column;
      width: 100%;
      gap: var(--space-md);
    }

    .hero-video__cta-group .btn {
      width: 100%;
      max-width: 320px;
      padding: var(--space-md) var(--space-xl);
      font-size: 1rem;
    }

    .hero-video__scroll-indicator {
      bottom: var(--space-xl);
    }
  }

  @media (max-width: 480px) {
    .hero-video {
      height: 100vh;
      min-height: 550px;
    }

    .hero-video__content {
      padding: var(--space-4xl) var(--space-md) var(--space-2xl);
    }

    .hero-video__title {
      font-size: clamp(1.75rem, 9vw, 2.5rem);
      line-height: 1.15;
    }

    .hero-video__subtitle {
      font-size: 1rem;
      line-height: 1.6;
      padding: 0 var(--space-sm);
    }

    .hero-video__cta-group .btn {
      max-width: 100%;
      padding: var(--space-sm) var(--space-lg);
      font-size: 0.95rem;
    }

    .hero-video__scroll-indicator {
      bottom: var(--space-lg);
      scale: 0.85;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-video__text-container,
    .hero-video__title,
    .hero-video__subtitle,
    .hero-video__cta-group,
    .hero-video__scroll-indicator {
      animation: none;
    }

    .particle {
      animation: none;
      opacity: 0.2;
    }

    .scroll-indicator__wheel {
      animation: none;
    }
  }

  /* High Contrast Mode Support */
  @media (prefers-contrast: high) {
    .hero-video__overlay {
      background: rgba(0, 0, 0, 0.8);
    }

    .hero-video__title,
    .hero-video__subtitle {
      text-shadow: 0 2px 30px rgba(0, 0, 0, 0.8);
    }
  }
</style>

<script>
  /**
   * Random Video Cycling and Smooth Scroll
   */

  // Wait for DOM to be ready
  document.addEventListener('DOMContentLoaded', () => {
    const videos = document.querySelectorAll('.hero-video__video') as NodeListOf<HTMLVideoElement>;

    if (videos.length === 0) {
      console.warn('HeroVideo: No videos found');
      return;
    }

    let currentIndex = 0;
    let usedIndices: number[] = [0]; // Start with first video

    // Preload all videos
    videos.forEach((video, index) => {
      if (index !== 0) {
        video.load();
      }
    });

    // Function to get random index that hasn't been used recently
    function getRandomIndex(): number {
      // If we've used all videos, reset the used list but keep current
      if (usedIndices.length >= videos.length) {
        usedIndices = [currentIndex];
      }

      let newIndex: number;
      let attempts = 0;
      do {
        newIndex = Math.floor(Math.random() * videos.length);
        attempts++;
      } while (usedIndices.includes(newIndex) && attempts < 20);

      return newIndex;
    }

    // Function to switch to next random video
    function switchVideo() {
      const nextIndex = getRandomIndex();

      // Fade out current video
      videos[currentIndex].classList.remove('active');
      videos[currentIndex].pause();

      // Fade in next video
      videos[nextIndex].classList.add('active');
      videos[nextIndex].currentTime = 0;
      videos[nextIndex].play().catch(err => {
        console.warn('Video autoplay failed:', err);
      });

      // Update tracking
      usedIndices.push(nextIndex);
      currentIndex = nextIndex;
    }

    // Start video cycling - switch every 2 seconds
    setInterval(switchVideo, 2000);

    // Smooth scroll for scroll indicator
    const scrollIndicator = document.querySelector('.hero-video__scroll-indicator');
    if (scrollIndicator) {
      scrollIndicator.addEventListener('click', (e: Event) => {
        e.preventDefault();
        const target = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
        if (target) {
          const element = document.querySelector(target);
          if (element) {
            element.scrollIntoView({ behavior: 'smooth', block: 'start' });
          } else {
            // If no target element, scroll one viewport down
            window.scrollBy({ top: window.innerHeight, behavior: 'smooth' });
          }
        }
      });
    }
  });
</script>
